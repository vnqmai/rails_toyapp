<div class="panel panel-info" style="margin: auto; width: 500px;" >
  <div class="panel-heading">
      <div class="panel-title">Forgot your password?</div>       
  </div>     
  <div class="panel-body">
  	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= render "devise/shared/error_messages", resource: resource %>

	  <div class="field">
	  	<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
	  		<%= f.label :email %><br />
	  	</div>	    
	  	<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
	  		<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
	  	</div>	    
	  </div><br><br><br>

	  <div class="actions">
	    <%= f.submit "Send me reset password instructions", class: "btn btn-info" %>
	  </div>
	<% end %>
	<hr>
	<%= render "devise/shared/links" %>

  </div>
</div>