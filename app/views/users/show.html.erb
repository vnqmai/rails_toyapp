<p id="notice"><%= notice %></p>

<% provide(:title, @user.name) %>
<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>
<hr>

<div class="container">
    <h4>User detail</h4>
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Back', users_path %>

    <hr>
    <h4>Microposts</h4>      
    <ol>
      <% @microposts.each do |micropost| %>            
        <li style="margin-bottom: 10px;">
          <%= gravatar_for @user %> 
          <%= @user.name %> 
          <b>posted 
            <%= micropost.content %>
          </b>
        </li>
      <% end %>
    </ol>    
</div>
